---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const {
	title = "Chameleon Ultra GUI",
	description = "Open source companion app for the Chameleon Ultra",
} = Astro.props as { title?: string; description?: string };
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body
		class="bg-white text-neutral-900 dark:bg-neutral-950 dark:text-neutral-100 antialiased selection:bg-violet-500/20 selection:text-violet-900 dark:selection:text-violet-100"
	>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
