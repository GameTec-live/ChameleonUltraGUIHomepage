                <div
                    class="relative overflow-hidden rounded-3xl ring-1 ring-black/10 dark:ring-white/10 shadow-2xl"
                >
                    <Image
                        src={showcase}
                        alt="Chameleon Ultra device and app"
                        width={1000}
                        height={700}
                        class="w-full h-auto"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
