                <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-3">
                    {
                        items.map((x) => (
                            <a
                                href={x.href}
                                target="_blank"
                                rel="noreferrer"
                                class="inline-flex items-center gap-3 rounded-lg border border-black/10 dark:border-white/10 px-4 py-3 text-sm font-medium text-neutral-800 dark:text-neutral-200 hover:bg-black/5 dark:hover:bg-white/5 transition"
